{
  "name": "rayyansaidi-desktop",
  "version": "2.2.2",
  "description": "This is the app version of rayyansaidi.com",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "eslint": "eslint .",
    "prettier": "prettier ."
  },
  "keywords": [],
  "author": "Rayyan Saidi and Nathan Chu",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "^10.0.0",
    "electron-builder": "^22.8.0",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "bootswatch": "^4.5.2",
    "html2canvas": "^1.0.0-rc.7",
    "is-online": "^8.4.0",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1",
    "semver": "^7.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn eslint"
    }
  },
  "build": {
    "productName": "Rayyansaidi Desktop",
    "dmg": {
      "title": "Install",
      "format": "UDZO",
      "contents": [
        {
          "x": 445,
          "y": 140
        },
        {
          "x": 445,
          "y": 290,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 576,
        "height": 404
      }
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
